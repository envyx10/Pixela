// Prisma schema for Pixela application
// Migrated from Laravel/MySQL to PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - migrated from Laravel users table
model User {
  id              Int       @id @default(autoincrement()) @map("user_id")
  name            String
  photoUrl        String?   @map("photo_url") @db.Text
  email           String    @unique
  emailVerifiedAt DateTime? @map("email_verified_at")
  password        String
  isAdmin         Boolean   @default(false) @map("is_admin")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  favorites Favorite[]
  reviews   Review[]
  sessions  Session[]
  accounts  Account[]

  @@map("users")
}

// NextAuth Account model for OAuth providers
model Account {
  id                String  @id @default(cuid())
  userId            Int     @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth Verification Token model
model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Item type enum for favorites and reviews
enum ItemType {
  movie
  series
}

// Favorite model - migrated from Laravel favorites table
model Favorite {
  id        Int      @id @default(autoincrement()) @map("favorite_id")
  itemType  ItemType @map("item_type")
  tmdbId    Int      @map("tmdb_id")
  userId    Int      @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, itemType, tmdbId], name: "favorites_unique_item")
  @@index([tmdbId])
  @@index([itemType])
  @@map("favorites")
}

// Review model - migrated from Laravel reviews table
model Review {
  id        Int      @id @default(autoincrement()) @map("review_id")
  itemType  ItemType @map("item_type")
  tmdbId    Int      @map("tmdb_id")
  rating    Decimal  @db.Decimal(3, 1)
  review    String?  @db.Text
  userId    Int      @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, itemType, tmdbId], name: "reviews_unique_item")
  @@index([tmdbId])
  @@index([itemType])
  @@index([rating])
  @@map("reviews")
}
